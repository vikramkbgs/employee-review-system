<div class="w-80 h-80 d-flex justify-content-center align-items-center">
    <form action="/create-account" 
        method="POST" 
        class="w-50 bg-body-tertiary p-2 mt-4 shadow rounded">

        <div class="text-center">
            <h1 class="text-primary">
                Sign Up
            </h1>
        </div>
        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" 
                name="name" id="name">
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email address</label>
            <input type="email" class="form-control" name="email" id="email">
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input type="password" class="form-control" name="password" id="password">
        </div>
        <div class="mb-3">
          <label for="cnf_password" class="form-label">Confirm Password</label>
          <input type="password" class="form-control" name="cnf_password" id="cnf_password">
        </div>
        <button type="submit" class="btn btn-primary">Sign Up</button>
        <div class="text-center">
            <p>
                Already have an accout, 
                <a href="/">Sign In</a>
                instead. 
            </p>
        </div>
    </form>
</div>
